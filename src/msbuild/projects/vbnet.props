<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0"
         xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Defines whether the current script file has been loaded / imported or not -->
        <ExistsProjectCSharp>true</ExistsProjectCSharp>
    </PropertyGroup>

    <PropertyGroup>
        <DirNBuildKitMsBuildProjects>$(DirPackages)\nBuildKit.MsBuild.Projects.VBNet.$(NBuildKitVersion)\build</DirNBuildKitMsBuildProjects>
        <DirNBuildKitMsBuildProjectsTemplates>$(DirNBuildKitMsBuildProjects)\templates</DirNBuildKitMsBuildProjectsTemplates>

        <!-- Build configuration -->
        <OptionExplicit>$(VbNetOptionExplicit)</OptionExplicit>
        <OptionCompare>Binary</OptionCompare>
        <OptionStrict>$(VbNetOptionStrict)</OptionStrict>
        <OptionInfer>On</OptionInfer>

        <AppDesignerFolder>$(VbNetAppDesignerFolder)</AppDesignerFolder>
    </PropertyGroup>

    <ItemGroup>
        <BuildFilesToGenerate Include="$(SolutionDir)\CompanyInformation.vb"
                         Condition=" '$(ShouldGenerateCompanyAndProductInfo)' == 'true' ">
            <Template>$(DirNBuildKitMsBuildProjectsTemplates)\CompanyInformation.vb</Template>
        </BuildFilesToGenerate>
        <BuildFilesToGenerate Include="$(SolutionDir)\ProductInformation.vb"
                         Condition=" '$(ShouldGenerateCompanyAndProductInfo)' == 'true' ">
            <Template>$(DirNBuildKitMsBuildProjectsTemplates)\ProductInformation.vb</Template>
        </BuildFilesToGenerate>
        <BuildFilesToGenerate Include="$(MSBuildProjectDirectory)\$(AppDesignerFolder)\AssemblyInfo.Company.vb"
                         Condition=" '$(ShouldGenerateAssemblyCompanyInfo)' == 'true' ">
            <Template>$(DirNBuildKitMsBuildProjectsTemplates)\AssemblyInfo.Company.vb</Template>
        </BuildFilesToGenerate>
        <BuildFilesToGenerate Include="$(MSBuildProjectDirectory)\$(AppDesignerFolder)\AssemblyInfo.VersionNumber.vb"
                         Condition=" '$(ShouldGenerateAssemblyVersionInfo)' == 'true' ">
            <Template>$(DirNBuildKitMsBuildProjectsTemplates)\AssemblyInfo.VersionNumber.vb</Template>
        </BuildFilesToGenerate>
        <BuildFilesToGenerate Include="$(MSBuildProjectDirectory)\$(AppDesignerFolder)\AssemblyInfo.BuildInformation.vb"
                         Condition=" '$(ShouldGenerateAssemblyBuildInfo)' == 'true' ">
            <Template>$(DirNBuildKitMsBuildProjectsTemplates)\AssemblyInfo.BuildInformation.vb</Template>
        </BuildFilesToGenerate>
    </ItemGroup>
</Project>