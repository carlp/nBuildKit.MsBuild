<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>nBuildKit.MsBuild</id>
        <version>$VersionSemantic$</version>
        <authors>$CompanyName$</authors>
        <owners>$CompanyName$</owners>
        <licenseUrl>http://www.apache.org/licenses/LICENSE-2.0</licenseUrl>
        <projectUrl>$ProductUrl$</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>
            Provides build scripts and build tasks that can be used to execute the build of a .NET project.
        </description>
        <releaseNotes>
            $ReleaseNotesHtmlEncoded$
        </releaseNotes>
        <dependencies>
            $Dependencies$
            <dependency
                id="nBuildKit.Tools.VsCoverageToReportGenerator"
                version="[$VersionSemantic$, $VersionMajorNext$)" />
        </dependencies>
    </metadata>
    <files>
        <file
            src="$DirSrc$\nbuildkit\scripts\*.msbuild"
            target="build" />
        <file
            src="$DirSrc$\nbuildkit\scripts\*.props"
            target="build" />
        <file
            src="$DirSrc$\nbuildkit\shared\*.props"
            target="build" />

        <file
            src="$DirSrc$\nbuildkit\scripts\build\*.msbuild"
            target="build\build" />
        <file
            src="$DirSrc$\nbuildkit\scripts\build\*.props"
            target="build\build" />
        <file
            src="$DirSrc$\nbuildkit\scripts\build\*.zipspec"
            target="build\build" />

        <file
            src="$DirSrc$\nbuildkit\scripts\test\*.msbuild"
            target="build\test" />
        <file
            src="$DirSrc$\nbuildkit\scripts\test\*.props"
            target="build\test" />

        <file
            src="$DirSrc$\nbuildkit\scripts\deploy\*.msbuild"
            target="build\deploy" />
        <file
            src="$DirSrc$\nbuildkit\scripts\deploy\*.props"
            target="build\deploy" />

        <file
            src="$DirSrc$\nbuildkit\tasks\nBuildKit.MsBuild.Tasks\nBuildKit.MsBuild.Tasks\bin\$Configuration$\*.dll"
            target="build/extensions" />
        <file
            src="$DirSrc$\nbuildkit\extensions\*.msbuild"
            target="build/extensions" />

        <file
            src="$DirTemp$\scripts\build\packages.config"
            target="build\build" />
        <file
            src="$DirTemp$\scripts\test\packages.config"
            target="build\test" />
        <file
            src="$DirTemp$\scripts\deploy\packages.config"
            target="build\deploy" />
        <file
            src="$DirTemp$\nbuildkit.readme.txt"
            target="content" />

        <file
            src="$DirWorkspace$\README.md" />
        <file
            src="$DirWorkspace$\LICENSE" />
    </files>
</package>