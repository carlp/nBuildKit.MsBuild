<?xml version="1.0" encoding="utf-8"?>
<Project
    DefaultTargets="Run"
    ToolsVersion="11.0"
    xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Defines whether the current script file has been loaded / imported or not -->
        <ExistsSharedImportDeploySharedSettings>true</ExistsSharedImportDeploySharedSettings>
    </PropertyGroup>

    <Import
        Condition="Exists('$(DirNBuildKitMsBuildShared)\shared.basesettings.props') AND '$(ExistsSharedBaseSettings)' != 'true' "
        Project="$(DirNBuildKitMsBuildShared)\shared.basesettings.props" />

    <PropertyGroup>
        <DeployPropertyFile>$(DirUserSettings)\deploy.settings.props</DeployPropertyFile>
    </PropertyGroup>

    <!-- Import the settings files that has all the overriden settings -->
    <!--
        Note that we rely on loading the user settings file first so that the 'TemplateVersion' items created by the user are first in their list.
    -->
    <Import
        Condition="Exists('$(DirNBuildKitMsBuild)\deploy\shared.deploysteps.msbuild') AND '$(ExistsDeploySteps)' != 'true' "
        Project="$(DirNBuildKitMsBuild)\deploy\shared.deploysteps.msbuild" />
    <Import
        Condition="Exists('$(DeployPropertyFile)') AND '$(ExistsDeploySettings)' != 'true' "
        Project="$(DeployPropertyFile)" />
    <Import
        Condition="Exists('$(DirNBuildKitMsBuild)\deploy\deploy.shared.props') AND '$(ExistsDeploySharedSettings)' != 'true' "
        Project="$(DirNBuildKitMsBuild)\deploy\deploy.shared.props" />

    <!-- Import the standard template token files -->
    <PropertyGroup>
        <LoadTemplateTokens Condition=" '$(LoadTemplateTokens)' == '' ">true</LoadTemplateTokens>
    </PropertyGroup>
    <Import
        Condition=" '$(LoadTemplateTokens)' == 'true' "
        Project="$(DirNBuildKitMsBuild)\templatetokens.*.props" />
    <Import
        Condition=" '$(LoadTemplateTokens)' == 'true' "
        Project="$(DirGeneratedPropertiesFiles)\templatetokens.*.props" />
</Project>
