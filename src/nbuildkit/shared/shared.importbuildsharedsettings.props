<?xml version="1.0" encoding="utf-8"?>
<Project
    DefaultTargets="Run"
    ToolsVersion="11.0"
    xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <!-- Defines whether the current script file has been loaded / imported or not -->
        <ExistsSharedImportBuildSharedSettings>true</ExistsSharedImportBuildSharedSettings>
    </PropertyGroup>

    <Import
        Condition="Exists('$(DirNBuildKitMsBuildShared)\shared.basesettings.props') AND '$(ExistsSharedBaseSettings)' != 'true' "
        Project="$(DirNBuildKitMsBuildShared)\shared.basesettings.props" />

     <PropertyGroup>
        <BuildPropertyFile>$(DirUserSettings)\build.settings.props</BuildPropertyFile>
     </PropertyGroup>

    <!-- Import the settings files that has all the overriden settings -->
    <!--
        Note that we rely on loading the user settings file first so that the 'TemplateVersion' items created by the user are first in their list.
    -->
    <Import
        Condition="Exists('$(DirNBuildKitMsBuild)\build\shared.buildsteps.msbuild') AND '$(ExistsBuildSteps)' != 'true' "
        Project="$(DirNBuildKitMsBuild)\build\shared.buildsteps.msbuild" />
    <Import
        Condition="Exists('$(DirNBuildKitMsBuild)\build\build.shared.preuser.props') AND '$(ExistsBuildPreUserSharedSettings)' != 'true' "
        Project="$(DirNBuildKitMsBuild)\build\build.shared.preuser.props" />
    <Import
        Condition="Exists('$(BuildPropertyFile)') AND '$(ExistsBuildSettings)' != 'true' "
        Project="$(BuildPropertyFile)" />
    <Import
        Condition="Exists('$(DirNBuildKitMsBuild)\build\build.shared.postuser.props') AND '$(ExistsBuildPostUserSharedSettings)' != 'true' "
        Project="$(DirNBuildKitMsBuild)\build\build.shared.postuser.props" />

    <!-- Import the standard template token files -->
    <PropertyGroup>
        <LoadTemplateTokens Condition=" '$(LoadTemplateTokens)' == '' ">true</LoadTemplateTokens>
    </PropertyGroup>
    <Import
        Condition=" '$(LoadTemplateTokens)' == 'true' "
        Project="$(DirNBuildKitMsBuild)\templatetokens.*.props" />
    <Import
        Condition=" '$(LoadTemplateTokens)' == 'true' "
        Project="$(DirGeneratedPropertiesFiles)\templatetokens.*.props" />
</Project>
