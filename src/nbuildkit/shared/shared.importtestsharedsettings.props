<?xml version="1.0" encoding="utf-8"?>
<Project
    DefaultTargets="Run"
    ToolsVersion="11.0"
    xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Defines whether the current script file has been loaded / imported or not -->
        <ExistsSharedImportTestSharedSettings>true</ExistsSharedImportTestSharedSettings>
    </PropertyGroup>

    <Import
        Condition="Exists('$(DirNBuildKitMsBuildShared)\shared.basesettings.props') AND '$(ExistsSharedBaseSettings)' != 'true' "
        Project="$(DirNBuildKitMsBuildShared)\shared.basesettings.props" />

    <PropertyGroup>
        <LoadTemplateTokens Condition=" '$(LoadTemplateTokens)' == '' ">true</LoadTemplateTokens>
    </PropertyGroup>

    <!--
        Load the user defined shared settings file
    -->
    <Import
        Condition="Exists('$(DirUserShared)\shared.importtestsharedsettings.props') AND '$(ExistsSharedUserImportTestSharedSettings)' != 'true' "
        Project="$(DirUserShared)\shared.importtestsharedsettings.props" />

    <!-- Import the steps -->
    <Import
        Condition="Exists('$(DirNBuildKitMsBuild)\test\shared.teststeps.msbuild') AND '$(ExistsTestSteps)' != 'true' "
        Project="$(DirNBuildKitMsBuild)\test\shared.teststeps.msbuild" />

    <!-- Import the settings files -->
    <PropertyGroup>
        <TestPropertyFile>$(DirUserSettings)\test.settings.props</TestPropertyFile>
    </PropertyGroup>
    <Import
        Condition="Exists('$(DirNBuildKitMsBuild)\test\test.shared.preuser.props') AND '$(ExistsTestPreUserSharedSettings)' != 'true' "
        Project="$(DirNBuildKitMsBuild)\test\test.shared.preuser.props" />
    <Import
        Condition="Exists('$(TestPropertyFile)') AND '$(ExistsTestSettings)' != 'true' "
        Project="$(TestPropertyFile)" />
    <Import
        Condition="Exists('$(DirNBuildKitMsBuild)\test\test.shared.postuser.props') AND '$(ExistsTestPostUserSharedSettings)' != 'true' "
        Project="$(DirNBuildKitMsBuild)\test\test.shared.postuser.props" />

    <!-- Import the standard template token files -->
    <Import
        Condition=" '$(LoadTemplateTokens)' == 'true' "
        Project="$(DirNBuildKitMsBuild)\templatetokens.*.props" />
    <Import
        Condition=" '$(LoadTemplateTokens)' == 'true' "
        Project="$(DirGeneratedPropertiesFiles)\templatetokens.*.props" />
</Project>
