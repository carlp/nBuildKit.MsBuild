<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>nBuildKit.MsBuild</id>
    <version>${Version}</version>
    <authors>P. van der Velde</authors>
    <owners>P. van der Velde</owners>
    <licenseUrl>http://www.apache.org/licenses/LICENSE-2.0</licenseUrl>
    <projectUrl>https://github.com/pvandervelde/nBuildKit</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>
      Provides build scripts and build tasks that can be used to execute the build of a .NET project.
    </description>
    <releaseNotes>
      ${ReleaseNotes}
    </releaseNotes>
    <dependencies>
      ${Dependencies}
    </dependencies>
  </metadata>
  <files>
    <file src="${DirSrc}\msbuild\scripts\*.msbuild" target="" />
    <file src="${DirSrc}\msbuild\scripts\*.props" target="" />
    <file src="${DirSrc}\msbuild\extensions\*.msbuild" target="extensions" />
  </files>
</package>