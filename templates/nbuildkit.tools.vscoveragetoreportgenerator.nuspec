<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>nBuildKit.Tools.VsCoverageToReportGenerator</id>
        <version>$VersionSemantic$</version>
        <authors>$CompanyName$</authors>
        <owners>$CompanyName$</owners>
        <licenseUrl>http://www.apache.org/licenses/LICENSE-2.0</licenseUrl>
        <projectUrl>$CompanyUrl$</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>
            A tool that converts VS code coverage files to a file type that can be read by ReportGenerator.
        </description>
        <releaseNotes>
            $ReleaseNotesShort$
        </releaseNotes>
        <dependencies>
            $Dependencies$
        </dependencies>
    </metadata>
    <files>
        <file src="$DirBin$\*.exe"
              exclude="$DirBin$\*.vshost.exe" />
        <file src="$DirBin$\*.dll" />
        <file src="$DirBin$\*.pdb"
              exclude="$DirBin$\*.vshost.pdb" />

        <file src="$DirSrc$\tools\VSCoverageToReportGenerator\VSCoverageToReportGenerator\**\*.cs" target="src\tools\VSCoverageToReportGenerator\VSCoverageToReportGenerator" />

        <file src="$DirWorkspace$\README.md" />
        <file src="$DirWorkspace$\LICENSE" />
    </files>
</package>